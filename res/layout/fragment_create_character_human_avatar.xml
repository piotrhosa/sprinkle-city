<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_create_character_human_avatar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:padding="20dip" >

        <TextView
            android:id="@+id/text_human_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_human_avatar" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/image_character_human_0"
                    android:layout_width="300dip"
                    android:layout_height="300dip"
                    android:layout_marginLeft="50dip"
                    android:layout_marginRight="25dip"
                    android:background="@drawable/character_human_0"
                    android:contentDescription="@string/image_character_human" />

                <ImageButton
                    android:id="@+id/image_character_human_1"
                    android:layout_width="300dip"
                    android:layout_height="300dip"
                    android:layout_marginLeft="25dip"
                    android:layout_marginRight="25dip"
                    android:background="@drawable/character_human_1"
                    android:contentDescription="@string/image_character_human" />

                <ImageButton
                    android:id="@+id/image_character_human_2"
                    android:layout_width="300dip"
                    android:layout_height="300dip"
                    android:layout_marginLeft="25dip"
                    android:layout_marginRight="50dip"
                    android:background="@drawable/character_human_2"
                    android:contentDescription="@string/image_character_human" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>